              </a>
              <% end %>

              <% if current_user.admin == true %>
              <a href="/delete_barber/<%= @barber.id %>" class="btn btn-danger">
                <i class="fa fa-trash-o"></i>
                <% end %>
              </a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- End responsive panel example -->

