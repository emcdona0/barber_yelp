<!-- Simple full-width example-->

<div class="page-header">
  <h1>Barber #<%= @barber.id %></h1>
</div>

<div class="row">
  <div class="col-md-12">
    <dl class="dl-horizontal">
      <dt>Username</dt>
      <dd><%= @barber.username %></dd>

      <dt>First name</dt>
      <dd><%= @barber.first_name %></dd>

      <dt>Last name</dt>
      <dd><%= @barber.last_name %></dd>

      <dt>Telephone</dt>
      <dd><%= @barber.telephone %></dd>

      <dt>Average rating</dt>
      <dd><%= @barber.average_rating %></dd>

      <dt></dt>
      <dd>
        <div class="btn-group">
          <a href="/barbers" class="btn btn-primary">
            <i class="fa fa-chevron-left"></i>
          </a>
          <% if current_user.admin == true %>
          <a href="/barbers/<%= @barber.id %>/edit" class="btn btn-warning">
            <i class="fa fa-edit"></i>
          </a>
          <% end %>

          <% if current_user.admin == true %>
          <a href="/delete_barber/<%= @barber.id %>" class="btn btn-danger">
            <i class="fa fa-trash-o"></i>
          </a>
          <% end %>
        </div>
      </dd>
    </dl>

  </div>
</div>

<!-- End simple full-width example-->

<!-- Responsive panel example-->

<div class="row">
  <div class="col-sm-offset-1 col-sm-10 col-md-offset-2 col-md-8">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Barber #<%= @barber.id %></h3>
      </div>
      <div class="panel-body">
        <div class="row">
          <div class="col-md-12">
            <dl class="dl-horizontal">
              <dt>Username</dt>
              <dd><%= @barber.username %></dd>

              <dt>First name</dt>
              <dd><%= @barber.first_name %></dd>

              <dt>Last name</dt>
              <dd><%= @barber.last_name %></dd>

              <dt>Telephone</dt>
              <dd><%= @barber.telephone %></dd>

              <dt>Average rating</dt>
              <dd><%= @barber.average_rating %></dd>

            </dl>
            <div class="btn-group btn-group-justified">
              <a href="/barbers" class="btn btn-primary">
                <i class="fa fa-chevron-left"></i>
              </a>

              <% if current_user.admin == true %>
              <a href="/barbers/<%= @barber.id %>/edit" class="btn btn-warning">
                <i class="fa fa-edit"></i>
              </a>
              <% end %>

              <% if current_user.admin == true %>
              <a href="/delete_barber/<%= @barber.id %>" class="btn btn-danger">
                <i class="fa fa-trash-o"></i>
                <% end %>
              </a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- End responsive panel example -->
