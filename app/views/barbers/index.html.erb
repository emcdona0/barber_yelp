          <th></th>
          <th></th>
        </tr>
      </thead>

      <tbody>

        <% @barbers.each do |barber| %>
        <tr>
          <th>
           <img src="<%= barber.avatar_url %>" alt="" class="img-circle" width="80">
         </th>
