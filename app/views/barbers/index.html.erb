        </td>
        <% end %>
        <% if current_user.admin == true %>
        <td>
          <a href="/delete_barber/<%= barber.id %>" class="btn btn-danger">
            <i class="fa fa-trash-o"></i>
          </a>
        </td>
        <% end %>
