<div class="content-container">
<!-- Validation failure messages -->

<% if @barbershop.errors.any? %>
  <% @barbershop.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<!-- Simple full-width example -->

<div class="page-header">
  <h1>Edit <%= @barbershop.name %></h1>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/update_barbershop/<%= @barbershop.id %>" class="form-horizontal">
      <!-- Label and input for name -->
      <div class="form-group">
        <label for="name" class="col-sm-2 control-label">
          Name
        </label>
        <div class="col-sm-10">
          <input type="text" id="name" name="name" placeholder="Name" class="form-control" value="<%= @barbershop.name %>">
        </div>
      </div>

      <!-- Label and input for address -->
      <div class="form-group">
        <label for="address" class="col-sm-2 control-label">
          Address
        </label>
        <div class="col-sm-10">
          <input type="text" id="address" name="address" placeholder="Address" class="form-control" value="<%= @barbershop.address %>">
        </div>
      </div>

      <!-- Label and input for hood_id -->
      <div class="form-group">
        <label for="hood_id" class="col-sm-2 control-label">
          Hood
        </label>
        <div class="col-sm-10">
          <!-- <input type="text" id="hood_id" name="hood_id" placeholder="Hood" class="form-control" value="<%= @barbershop.hood_id %>"> -->
          <%= select_tag(:hood_id, options_from_collection_for_select(Hood.all, :id, :name), :class => "form-control" ) %>
        </div>
      </div>

      <!-- Label and input for telephone -->
      <div class="form-group">
        <label for="telephone" class="col-sm-2 control-label">
          Telephone
        </label>
        <div class="col-sm-10">
          <input type="text" id="telephone" name="telephone" placeholder="Telephone" class="form-control" value="<%= @barbershop.telephone %>">
        </div>
      </div>

      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
          <input type="submit" value="Update Barbershop" class="btn btn-warning">
          or
          <a href="/barbershops/<%= @barbershop.id %>">Cancel</a>
        </div>
      </div>
    </form>
  </div>
</div>

