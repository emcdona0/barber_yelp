<div class="page-header">
  <h1>
    Ratings
    <a href="/ratings/new" class="btn btn-lg btn-success"><i class="fa fa-plus"></i></a>
  </h1>
</div>

<!-- Simple table layout example -->

<div class="row">
  <div class="col-md-12">
    <table class="table table-hover">
      <thead>
        <tr>
          <th>Barber</th>
          <th>User</th>
          <th>Rating</th>
          <th>Comment</th>
          <th></th>
          <th></th>
          <th></th>
        </tr>
      </thead>

      <tbody>
        <% @ratings.each do |rating| %>
          <tr>
            <td><%= rating.barber.username %></td>
            <td><%= rating.user.username %></td>
            <td><%= rating.rating %></td>
            <td><%= rating.comment %></td>
            <td>
              <a href="/ratings/<%= rating.id %>" class="btn btn-primary">
                <i class="fa fa-search-plus"></i>
              </a>
            </td>

            <td>
              <% if current_user == rating.user || current_user.admin == true %>
              <a href="/ratings/<%= rating.id %>/edit" class="btn btn-warning">
                <i class="fa fa-edit"></i>
              </a>
              <% end %>
            </td>

            <td>
            <% if current_user == rating.user || current_user.admin == true %>
              <a href="/delete_rating/<%= rating.id %>" class="btn btn-danger">
                <i class="fa fa-trash-o"></i>
              </a>
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

<!-- End simple table layout example -->

<!-- Responsive, Isotope-based layout example -->

<div class="row">
  <div class="col-xs-12">
    <input type="text" id="quicksearch" placeholder="Search Ratings (start typing)" class="form-control">
  </div>
</div>

<hr>

<div class="row isotope-container">
<% @ratings.each do |rating| %>
  <div class="col-xs-12 col-sm-6 col-md-4 col-lg-3 isotope-item">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Rating #<%= rating.id %></h3>
      </div>
      <div class="panel-body">
        <dl>
          <dt>Barber</dt>
          <dd><%= rating.barber.username %></dd>

          <dt>User</dt>
          <dd><%= rating.user.username %></dd>

          <dt>Rating</dt>
          <dd><%= rating.rating %></dd>

          <dt>Comment</dt>
          <dd><%= rating.comment %></dd>

        </dl>
        <div class="btn-group btn-group-justified">
          <a href="/ratings/<%= rating.id %>" class="btn btn-primary">
            <i class="fa fa-search-plus"></i>
          </a>
          <% if current_user == rating.user || current_user.admin == true %>
          <a href="/ratings/<%= rating.id %>/edit" class="btn btn-warning">
            <i class="fa fa-edit"></i>
          </a>
          <% end %>

          <% if current_user == rating.user || current_user.admin == true %>
          <a href="/delete_rating/<%= rating.id %>" class="btn btn-danger">
            <i class="fa fa-trash-o"></i>
            <% end %>

          </a>
        </div>
      </div>
    </div>
  </div>
<% end %>
</div>

<!-- JavaScript for Isotope layout and quicksearch -->
<script src="//cdnjs.cloudflare.com/ajax/libs/jquery.isotope/2.0.0/isotope.pkgd.min.js"></script>
<script>
  $(function() {
    // quick search regex
    var qsRegex;

    // init Isotope
    var $container = $('.isotope-container').isotope({
      itemSelector: '.isotope-item',
      layoutMode: 'masonry',
      filter: function() {
        return qsRegex ? $(this).text().match( qsRegex ) : true;
      }
    });

    // use value of search field to filter
    var $quicksearch = $('#quicksearch').keyup( debounce( function() {
      qsRegex = new RegExp( $quicksearch.val(), 'gi' );
      $container.isotope();
    }, 200 ) );

  });

  // debounce so filtering doesn't happen every millisecond
  function debounce( fn, threshold ) {
    var timeout;
    return function debounced() {
      if ( timeout ) {
        clearTimeout( timeout );
      }
      function delayed() {
        fn();
        timeout = null;
      }
      timeout = setTimeout( delayed, threshold || 100 );
    }
  }
</script>

<!-- End responsive, Isotope-based layout example -->
