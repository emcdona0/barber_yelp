<!-- Simple full-width example-->

<div class="page-header">
  <h1>Rating #<%= @rating.id %></h1>
</div>

<div class="row">
  <div class="col-md-12">
    <dl class="dl-horizontal">
      <dt>Barber</dt>
      <dd><%= @rating.barber.username %></dd>

      <dt>User</dt>
      <dd><%= @rating.user.username %></dd>

      <dt>Rating</dt>
      <dd><%= @rating.rating %></dd>

      <dt>Comment</dt>
      <dd><%= @rating.comment %></dd>

      <dt></dt>
      <dd>
        <div class="btn-group">
          <a href="/ratings" class="btn btn-primary">
            <i class="fa fa-chevron-left"></i>
          </a>
          <% if current_user == @rating.user %>
          <a href="/ratings/<%= @rating.id %>/edit" class="btn btn-warning">
            <i class="fa fa-edit"></i>
          </a>
          <% end %>

          <% if current_user == @rating.user %>
          <a href="/delete_rating/<%= @rating.id %>" class="btn btn-danger">
            <i class="fa fa-trash-o"></i>
          </a>
          <% end %>

        </div>
      </dd>
    </dl>

  </div>
</div>

<!-- End simple full-width example-->

<!-- Responsive panel example-->

<div class="row">
  <div class="col-sm-offset-1 col-sm-10 col-md-offset-2 col-md-8">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Rating #<%= @rating.id %></h3>
      </div>
      <div class="panel-body">
        <div class="row">
          <div class="col-md-12">
            <dl class="dl-horizontal">
              <dt>Barber</dt>
              <dd><%= @rating.barber.username %></dd>

              <dt>User</dt>
              <dd><%= @rating.user.username %></dd>

              <dt>Rating</dt>
              <dd><%= @rating.rating %></dd>

              <dt>Comment</dt>
              <dd><%= @rating.comment %></dd>

            </dl>
            <div class="btn-group btn-group-justified">
              <a href="/ratings" class="btn btn-primary">
                <i class="fa fa-chevron-left"></i>
              </a>
              <% if current_user == @rating.user %>
              <a href="/ratings/<%= @rating.id %>/edit" class="btn btn-warning">
                <i class="fa fa-edit"></i>
              </a>
              <% end %>
              <% if current_user == @rating.user %>
              <a href="/delete_rating/<%= @rating.id %>" class="btn btn-danger">
                <i class="fa fa-trash-o"></i>
                <% end %>
              </a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- End responsive panel example -->
