<!-- Simple full-width example-->

<div class="page-header">
  <h1>User #<%= @user.id %> <%= @user.username %></h1>
</div>

<div class="row">
  <div class="col-md-12">
    <dl class="dl-horizontal">


      <dd><img src="<%= @user.avatar_url %>" alt="" class="img-circle" width="160"></dd>

      <dt>Username</dt>
      <dd><%= @user.username %></dd>

      <dt>First name</dt>
      <dd><%= @user.first_name %></dd>
      <% if current_user.admin == true %>
      <dt>Last name</dt>
      <dd><%= @user.last_name %></dd>

      <dt>Email</dt>
      <dd><%= @user.email %></dd>

      <dt>Telephone</dt>
      <dd><%= @user.telephone %></dd>

      <dt>Admin</dt>
      <dd><%= @user.admin %></dd>

      <% end %>

      <dt></dt>
      <dd>
        <div class="btn-group">
          <a href="/users" class="btn btn-primary">
            <i class="fa fa-chevron-left"></i>
          </a>
          <% if current_user.admin == true %>
          <a href="/users/<%= @user.id %>/edit" class="btn btn-warning">
            <i class="fa fa-edit"></i>
          </a>

          <a href="/delete_user/<%= @user.id %>" class="btn btn-danger">
            <i class="fa fa-trash-o"></i>
          </a>
          <% end %>
        </div>
      </dd>
    </dl>

  </div>
</div>

<!-- End simple full-width example-->

<!-- Responsive panel example-->

<div class="row">
  <div class="col-sm-offset-1 col-sm-10 col-md-offset-2 col-md-8">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">User #<%= @user.id %></h3>
      </div>
      <div class="panel-body">
        <div class="row">
          <div class="col-md-12">
            <dl class="dl-horizontal">
              <dt>Username</dt>
              <dd><%= @user.username %></dd>

              <dt>First name</dt>
              <dd><%= @user.first_name %></dd>

              <% if current_user.admin == true %>
              <dt>Last name</dt>
              <dd><%= @user.last_name %></dd>

              <dt>Email</dt>
              <dd><%= @user.email %></dd>

              <dt>Telephone</dt>
              <dd><%= @user.telephone %></dd>

              <dt>Admin</dt>
              <dd><%= @user.admin %></dd>

              <% end %>

            </dl>
            <div class="btn-group btn-group-justified">
              <a href="/users" class="btn btn-primary">
                <i class="fa fa-chevron-left"></i>
              </a>

              <% if current_user.admin == true %>
              <a href="/users/<%= @user.id %>/edit" class="btn btn-warning">
                <i class="fa fa-edit"></i>
              </a>

              <a href="/delete_user/<%= @user.id %>" class="btn btn-danger">
                <i class="fa fa-trash-o"></i>
              </a>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- End responsive panel example -->
